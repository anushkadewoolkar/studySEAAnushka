<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/underwater"
    android:windowSoftInputMode="stateVisible|adjustPan"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/study"
        android:layout_width="214dp"
        android:layout_height="53dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="146dp"
        android:background="@color/colorIcons"
        android:text="study with flashcards"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/assignmentsList"
        android:layout_width="386dp"
        android:layout_height="226dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/light"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assignmentDate" />

    <TextView
        android:id="@+id/assignmentDate"
        android:layout_width="144dp"
        android:layout_height="55dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="484dp"
        android:background="@color/colorWhite"
        android:ems="10"
        android:text="click here to select a day"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="click here to select a day" />

</androidx.constraintlayout.widget.ConstraintLayout>